<% provide(:title, "Features") %>
<h1 class="page-head"><%= @category.name %> Features</h1>
<div class="row">
    <% @features.each do |feature| %>
    <div id="<%= " feature_#{feature.id}" %>" class="large-4 medium-6 small-12 columns">
        <%= link_to add_feature_path(feature.id), method: :post do %>
        <p class="tile">
            <%= feature.description %>
        </p>
        <% end %>
    </div>
    <% end %>
</div>
