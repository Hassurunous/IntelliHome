<h1 class="page-head"><%= @category.name %> Features</h1>
<div class="container">
    <div class="row small-offset-1">
        <% @features.in_groups_of(2, false) do |row_features| %>
            <% for feature in row_features %>
                <div id="<%= "feature_#{feature.id}" %>" class="small-4 small-offset-1 columns tile tile-label"><%= feature.description %></div>
            <% end %>
        <% end %>
    </div>
</div>
