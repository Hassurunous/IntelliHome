<% provide(:title, "Signup") %>
<h1 class="page-head">Signup</h1>

<div class="large-8 large-centered medium-10 medium-centered small-12 small-centered columns">
    <%= form_for(@user, url: signup_path) do |f| %>

    <div class="row">

        <%= render 'shared/error_messages' %>

        <div class="large-5 medium-12 small-12" style="float: left">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form-control', required: true %>
        </div>
        <div class="large-5 medium-12 small-12" style="float: right">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control', required: true %>
        </div>
    </div>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', required: true %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', required: true %>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, class: 'form-control', required: true %>

    <%= f.submit "Create Account", class: "button radius" %>

    <% end %>
</div>
<script>
$("#new_user").validate();
</script>
