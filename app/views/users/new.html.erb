<% provide(:title, "Signup") %>
<h1>Signup</h1>

<div class="large-8 large-centered medium-10 medium-centered small-12 small-centered columns">
    <%= form_for(@user) do |f| %>

    <div class="row">
        <div class="large-5 medium-12 small-12" style="float: left">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
        </div>
        <div class="large-5 medium-12 small-12" style="float: right">
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
        </div>
    </div>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.text_field :password_confirmation %>

    <%= f.submit "Create Account", class: "btn btn-primary" %>

    <% end %>
</div>
