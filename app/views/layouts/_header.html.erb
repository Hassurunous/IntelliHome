<div class="top-bar">
    <div class="top-bar-title">
        <strong>
            <%= link_to root_url, class:"title-bar-title" do %>
            IntelliHome
            <% end %>
        </strong>
    </div>
    <div id="responsive-menu">
        <div class="top-bar-left">
            <ul class="menu">
                <li>
                    <%= link_to "CATEGORIES", :controller => :categories, :action => :index %>
                </li>
                <li>
                    <%= link_to "POPULAR PRODUCTS", :controller => :products, :action => :index %>
                </li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
                <li>
                    <% if logged_in? %>
                        <li class="dropdown">
                            <ul class="dropdown menu" data-dropdown-menu>
                                <li>
                                    <%= link_to "Log out", logout_path, method: "delete" %>
                                </li>
                            </ul>
                        </li>
                    <% else %>
                        <%= link_to "LOG IN", login_path %>
                    <% end %>
                </li>
                <li>
                    <%= link_to "MY LIST", current_user %>
                </li>
                <li>
                    <%= link_to "CART", cart_url(current_user) %>
                </li>
            </ul>
        </div>
    </div>
</div>
