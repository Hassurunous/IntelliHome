<div class="top-bar">
    <div class="top-bar-title">
        <span data-responsive-toggle="responsive-menu" data-hide-for="medium">
            <button class="menu-icon" type="button" data-toggle></button>
        </span>
        <strong>
            <%= link_to root_url, class:"title-bar-title" do %>
            <%= image_tag 'logo.png', width: 40, height: 40, alt: 'Logo'%>
            IntelliHome
            <% end %>
        </strong>
    </div>
    <div id="responsive-menu">
        <div class="top-bar-left">
            <ul class="menu">
                <li>
                    <%= link_to "Categories", :controller => :categories, :action => :index %>
                </li>
                <li>
                    <%= link_to "All Features", :controller => :features, :action => :index %>
                </li>
                <li>
                    <%= link_to "Popular Products", :controller => :products, :action => :index %>
                </li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
                <li>
                    <a href="#">My List</a>
                </li>
                <li>
                    <a href="#">Cart</a>
                </li>
            </ul>
        </div>
    </div>
</div>
